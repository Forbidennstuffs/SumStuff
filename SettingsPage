SettingsPopUpFrame.UIScaleTextBox.TextTransparency = 0
SettingsPopUpFrame.UIScaleTextBox.UIStroke.Transparency = 0.7
SettingsPopUpFrame.UIScaleImage.BackgroundTransparency = 0.9
SettingsPopUpFrame.UIScaleImage.ImageTransparency = 0
SettingsPopUpFrame.UIScaleImage.UIStroke.Transparency = 0.7
SettingsPopUpFrame.OpenButtonText.TextTransparency = 0
